pipeline {
  agent any

  options {
    ansiColor('xterm')
  }

  stages {
    stage('build') {
      when {
        branch 'main'
      }
      steps {
        echo 'building...'
      }
    }
    stage('test') {
      when {
        branch 'main'
      }
      steps {
        echo 'testing...'
      }
    }
    stage('deploy') {
      when {
        branch 'main'
      }
      steps {
        echo 'deploying...'
      }
    }
    stage('hello world') {
      when {
        anyOf { branch 'extras-jenkinsfile'; branch 'main' }
      }
      steps {
        echo '\033[34mHello\033[0m \033[33mcolorful\033[0m \033[35mworld!\033[0m'
      }
    }
  }
}
